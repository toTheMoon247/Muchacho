<div class="row m-0">
  <div class="left-col col-6 p-5">
    <h4 class="text-info mt-3 pt-3">Let's add a wine pairing to your dish</h4>
    <div class="form-top">
      <p class="text-secondary mt-5">First things first: Let's start with the basics</p>
      <h5 class="text-muted"></h5>
        <%= simple_form_for [@dish, @wine] do |f| %>
            
            <%= f.input :name,  placeholder:'Wine Name' %>
            <%= f.input :description, placeholder:'What makes it great' %>
            <%= f.input :year, placeholder:'Vintage' %>

            <div class="row">
              <div class="col-6">
                <%= f.input :cost, placeholder:'Cents per bottle' %>
              </div>
              <div class="col-6">
                <%= f.input :photo, as: :file %>
              </div>
            </div>

            <%= f.submit 'Add your wine', class: 'btn btn-secondary' %>
        <% end %>
        </div>
      </div>
      <div class="right-col col-6 vh-100"></div>
    </div>

