<div class="row m-0">
  <div class="left-col col-6 p-5">
    <h4 class="text-info mt-3 pt-3">Let's add a new dish to your menu</h4>
    <div class="form-top">
      <h5 class="text-secondary my-4">First things first: Let's start with the basics</h5>
      <h5 class="text-muted"></h5>
        <%= simple_form_for [@restaurant, @dish] do |f| %>
          <%= f.input :name,  label: false, placeholder: 'Dish Name' %>
          <%= f.input :meal_category, label: false,  collection: ["Starter", "Main", "Dessert"], as: :select, placeholder: 'Course' %>
          <div class="row m-3">
            <div class="col-6">
              <%= f.input :photo, as: :file, label: false %>
            </div>
            <div class="col-6">
              <%= f.input :cost, placeholder: 'Cost in cents', label: false %>
            </div>
          </div>
          <h5 class="text-secondary my-3 h-50">Add it to your menu?</h5>
            <%= f.fields_for :tasting do |t| %>
            <%= t.input :menu, as: :boolean, wrapper: :custom_boolean_switch, label: "Tasting Menu"%>
          <% end %>
          <h5 class="text-secondary">Now let's add the prep details</h5>
          <div class="row m-0">
            <%= f.input :prep_time,  placeholder: 'Prep time in minutes' %>
          </div>
          <div class="p-0">
            <%= f.rich_text_area :preparation, :wrapper_html => {:style=> 'padding: 0'} %>
          </div>
          <div class="p-0">
            <%= f.input :threed_model, label: "3D Model" ,placeholder: 'Wow your clients with plating AR' %>
          </div>
            <%= f.submit 'Create Dish', class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>    
  <div class="right-col col-6 vh-100"></div>
</div>

